<?xml version="1.0" encoding="utf-8"?>
<com.molitv.android.view.player.TopView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlayerTopViewStyle"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/TitleTextView"
        style="@style/PlayerTopTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/topstatusview_player_layout"
        android:ellipsize="end"
        android:singleLine="true" />

    <TextView
        android:id="@+id/DescTextView"
        style="@style/PlayerTopDescStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/TitleTextView"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true" />

    <include
        android:id="@+id/topstatusview_player_layout"
        layout="@layout/topstatusview_player_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
</com.molitv.android.view.player.TopView>