<?xml version="1.0" encoding="utf-8"?>
<com.molitv.android.view.TopStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TopStatusViewPlayerStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/BatteryIschargingText"
        style="@style/TopStatusTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/BatteryValueText"
        style="@style/TopStatusTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/BatteryLine"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginBottom="@dimen/dp_7"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_7"
        android:src="@drawable/topview_devider_line"
        android:visibility="gone" />

    <TextView
        android:id="@id/TimeTextView"
        style="@style/TopStatusTimeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</com.molitv.android.view.TopStatusView>