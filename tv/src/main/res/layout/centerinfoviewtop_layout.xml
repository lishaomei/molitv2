<?xml version="1.0" encoding="utf-8"?>
<com.molitv.android.view.player.CenterInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_52"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/CenterInfoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/playeloading" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/dp_16"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/CenterInfoTitle"
            style="@style/TopLoadingTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CenterInfoBufferTextView"
            style="@style/TopLoadingSubTitleStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone" />
    </LinearLayout>
</com.molitv.android.view.player.CenterInfoView>