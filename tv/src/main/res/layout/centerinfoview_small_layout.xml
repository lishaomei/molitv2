<?xml version="1.0" encoding="utf-8"?>
<com.molitv.android.view.player.CenterInfoView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150">

        <ImageView
            android:id="@id/CenterInfoImgBg"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/playeloading_big_shadow" />

        <ImageView
            android:id="@id/CenterInfoImg"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/playerloading_big" />

        <TextView
            android:id="@id/CenterInfoBufferTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@id/CenterInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</com.molitv.android.view.player.CenterInfoView>